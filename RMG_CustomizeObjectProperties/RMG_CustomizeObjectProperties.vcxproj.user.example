<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- 
    ПРИМЕР файла .vcxproj.user для настройки отладки
    Этот файл создается автоматически Visual Studio и НЕ попадает в Git
    
    EXAMPLE .vcxproj.user file for debugging setup
    This file is created automatically by Visual Studio and does NOT go to Git
  -->
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|Win32'">
    <!-- Настройки отладки / Debugging settings -->
    <LocalDebuggerCommand>$(LocalGamePath)\Heroes3.exe</LocalDebuggerCommand>
    <LocalDebuggerWorkingDirectory>$(LocalGamePath)</LocalDebuggerWorkingDirectory>
    <LocalDebuggerCommandArguments>-plugin "$(TargetPath)"</LocalDebuggerCommandArguments>
    <DebuggerFlavor>WindowsLocalDebugger</DebuggerFlavor>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|Win32'">
    <LocalDebuggerCommand>$(LocalGamePath)\Heroes3.exe</LocalDebuggerCommand>
    <LocalDebuggerWorkingDirectory>$(LocalGamePath)</LocalDebuggerWorkingDirectory>
    <LocalDebuggerCommandArguments>-plugin "$(TargetPath)"</LocalDebuggerCommandArguments>
    <DebuggerFlavor>WindowsLocalDebugger</DebuggerFlavor>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <LocalDebuggerCommand>$(LocalGamePath)\Heroes3.exe</LocalDebuggerCommand>
    <LocalDebuggerWorkingDirectory>$(LocalGamePath)</LocalDebuggerWorkingDirectory>
    <LocalDebuggerCommandArguments>-plugin "$(TargetPath)"</LocalDebuggerCommandArguments>
    <DebuggerFlavor>WindowsLocalDebugger</DebuggerFlavor>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
    <LocalDebuggerCommand>$(LocalGamePath)\Heroes3.exe</LocalDebuggerCommand>
    <LocalDebuggerWorkingDirectory>$(LocalGamePath)</LocalDebuggerWorkingDirectory>
    <LocalDebuggerCommandArguments>-plugin "$(TargetPath)"</LocalDebuggerCommandArguments>
    <DebuggerFlavor>WindowsLocalDebugger</DebuggerFlavor>
  </PropertyGroup>
</Project>
